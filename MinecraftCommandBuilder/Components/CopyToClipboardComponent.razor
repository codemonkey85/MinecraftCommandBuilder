@inject IJSRuntime JSRuntime

<MudStack>
    <MudInput T="string"
              @bind-Value="@CommandText"
              Variant="@Variant.Outlined"
              ReadOnly />
     <MudButton StartIcon="@Icons.Material.Filled.CopyAll"
                ButtonType="@ButtonType.Button"
                Variant="@Variant.Filled"
                Color="@Color.Primary"
                OnClick="@CopyCommandText"
                Disabled="@string.IsNullOrWhiteSpace(CommandText)"
                title="Copy command text">
         Copy command text
     </MudButton>
 </MudStack>
