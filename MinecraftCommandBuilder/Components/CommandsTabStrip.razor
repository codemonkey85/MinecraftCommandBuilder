<MudTabs Outlined="@true"
         Rounded="@true"
         Border="@true">

    <MudTabPanel Text="Give Items">
        <GiveItemsTab/>
    </MudTabPanel>

    <MudTabPanel Text="@EffectsTab.TabTitle">
        <EffectsTab/>
    </MudTabPanel>

    <MudTabPanel Text="@EnchantsTab.TabTitle">
        <EnchantsTab/>
    </MudTabPanel>

    <MudTabPanel Text="@TeleportTab.TabTitle">
        <TeleportTab/>
    </MudTabPanel>

    <MudTabPanel Text="@FillTab.TabTitle">
        <FillTab/>
    </MudTabPanel>

    <MudTabPanel Text="@SummonsTab.TabTitle">
        <SummonsTab/>
    </MudTabPanel>

    <MudTabPanel Text="@GameModeTab.TabTitle">
        <GameModeTab/>
    </MudTabPanel>

    @if (ShowExperimentalTab)
    {
        <MudTabPanel Text="@ExperimentalTab.TabTitle">
            <ExperimentalTab />
        </MudTabPanel>
    }

</MudTabs>

@code {
    private bool ShowExperimentalTab { get; set; } = 
    #if DEBUG
        true;
#else
        false;
#endif
}
