@page "/"

<PageTitle>
    Minecraft Command Builder
</PageTitle>

<MudSelect Label="Edition"
           T="@string"
           Value="@Edition"
           ValueChanged="@SetEdition">
    <MudSelectItem Value="@("pc")">
        PC
    </MudSelectItem>
    <MudSelectItem Value="@("bedrock")">
        Bedrock
    </MudSelectItem>
</MudSelect>

<MudSelect Label="Version"
           T="@string"
           Value="@Version"
           ValueChanged="@SetVersion">

    @if (Edition == "pc")
    {
        <MudSelectItem Value="@("1.21.4")">
            1.21.4
        </MudSelectItem>
    }

    @if (Edition == "bedrock")
    {
        <MudSelectItem Value="@("1.21.60")">
            1.21.60
        </MudSelectItem>
    }
</MudSelect>

<MudStack Class="mt-3">
    <MudInput T="string"
              Label="Command Text"
              @bind-Value="@CommandService.CommandText"
              Variant="@Variant.Outlined"
              ReadOnly/>
    <CommandsTabStrip/>
</MudStack>
