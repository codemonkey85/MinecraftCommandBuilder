<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.2" PrivateAssets="all" />
		<PackageReference Include="MinecraftDataCSharp" Version="1.0.0.16" />
		<PackageReference Include="MudBlazor" Version="6.16.0" />
	</ItemGroup>

	<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(OS)' != 'Windows_NT'">
		<!-- Unix-based systems (Linux and macOS) -->
		<Exec Command="mkdir -p &quot;$(ProjectDir)wwwroot/data/data&quot;" />
		<Exec Command="cp -r &quot;$(NuGetPackageRoot)minecraftdatacsharp/1.0.0.16/content/data/data/.&quot; &quot;$(ProjectDir)wwwroot/data/data&quot;" />
	</Target>
	<Target Name="PostBuildWindows" AfterTargets="PostBuildEvent" Condition="'$(OS)' == 'Windows_NT'">
		<!-- Windows systems -->
		<Exec Command="if not exist &quot;$(ProjectDir)wwwroot\data\data&quot; mkdir &quot;$(ProjectDir)wwwroot\data\data&quot;" />
		<Exec Command="xcopy /Y /I /E &quot;$(NuGetPackageRoot)MinecraftDataCSharp\1.0.0.16\content\data\data\*.*&quot; &quot;$(ProjectDir)wwwroot\data\data\&quot;" />
	</Target>

</Project>
