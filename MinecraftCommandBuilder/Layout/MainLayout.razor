@inherits LayoutComponentBase

<MudThemeProvider @ref="@MudThemeProvider"
                  @bind-IsDarkMode="@IsDarkMode"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudText Typo="@Typo.h4"
                 class="d-none d-lg-flex">
            @AppTitle
        </MudText>
        <MudText Typo="@Typo.h6"
                 class="d-none d-md-flex d-lg-none">
            @AppTitle
        </MudText>
        <MudText Typo="@Typo.inherit"
                 class="d-xs-flex d-md-none">
            @AppTitle
        </MudText>
        <MudSpacer/>
        <MudStack Row="@true">
            <MudSwitch @bind-Value="@IsDarkMode"
                       Color="@Color.Primary"
                       Label="@(IsDarkMode
                                  ? "Dark"
                                  : "Light")"
                       title="Toggle light / dark theme"/>
            <MudButton Class="d-none d-md-flex"
                       EndIcon="@Icons.Custom.Brands.GitHub"
                       Href="https://github.com/codemonkey85/MinecraftCommandBuilder"
                       Target="_blank"
                       title="Source code on GitHub"
                       Color="@Color.Inherit"
                       Variant="@Variant.Outlined">
                Source code on GitHub
            </MudButton>
            <MudIconButton Class="d-md-none"
                           Icon="@Icons.Custom.Brands.GitHub"
                           Href="https://github.com/codemonkey85/MinecraftCommandBuilder"
                           Target="_blank"
                           title="Source code on GitHub"
                           Color="@Color.Inherit"
                           Variant="@Variant.Outlined"/>
        </MudStack>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="@MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
